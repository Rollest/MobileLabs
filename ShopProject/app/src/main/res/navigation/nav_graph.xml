<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/nav_product_list">

    <fragment
        android:id="@+id/nav_product_list"
        android:name="ru.mirea.vasilevmn.shopproject.presentation.fragment.ProductListFragment"
        android:label="Product List" >
        <action
            android:id="@+id/action_nav_product_list_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_wishlist"
        android:name="ru.mirea.vasilevmn.shopproject.presentation.fragment.WishlistFragment"
        android:label="Wishlist" >
        <action
            android:id="@+id/action_nav_wishlist_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_currency_selection"
        android:name="ru.mirea.vasilevmn.shopproject.presentation.fragment.CurrencySelectionFragment"
        android:label="Currency Selection" />

    <activity
        android:id="@+id/nav_login"
        android:name="ru.mirea.vasilevmn.shopproject.presentation.LoginActivity"
        android:label="Login" />

    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="ru.mirea.vasilevmn.shopproject.presentation.fragment.ProductDetailsFragment"
        android:label="Product Details" />
</navigation>
